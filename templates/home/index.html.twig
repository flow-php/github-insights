{% extends 'base.html.twig' %}

{% block title %}GitHub Insights{% endblock %}

{% block body %}

<div class="wrapper">
    <h1>GitHub Insights</h1>
    <h4>Organizations</h4>
    <ul>
        {% for org in orgs %}
            <li>
                <a href="{{ path('app_org', { 'org': org }) }}">
                    {{ org }}
                </a>
            </li>
        {% else %}
            <li>There is no data available yet</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
